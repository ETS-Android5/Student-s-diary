<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/Liner_type_color"
    android:background="@drawable/corners_alert">

    <LinearLayout
        android:padding="20dp"
        android:id="@+id/LinerHex"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/hex_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:text="@string/HEX_code" />

    </LinearLayout>

        <LinearLayout
            android:id="@+id/Liner_Choose_Color"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
           >

            <Button
                android:id="@+id/choose_color"
                android:padding="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Choose_color"
                android:background="@drawable/shape"/>

        </LinearLayout>
</LinearLayout>