<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/rootScrollHelp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.FragmentHelp"
    android:overScrollMode="never"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/obz_one"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/obzOne"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/obz_two"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/obzTwo"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/gitHub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ClickMedia"
            android:src="@drawable/ic_github"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/obz_three"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/obzThree"
            android:textSize="20sp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/transifex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:onClick="ClickMedia"
            app:cardBackgroundColor="#141a37"
            app:cardCornerRadius="100dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="transifex"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_margin="10dp"
                />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/obz_four"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/obzFour"
            android:textSize="20sp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Gmail"
                android:layout_marginEnd="40dp"
                android:onClick="ClickMedia"
                android:src="@drawable/ic_iconfinder_gmail_1220367"
                tools:ignore="ContentDescription" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="ClickMedia"
                android:id="@+id/vk"
                android:src="@drawable/ic_iconfinder_vk_834714"
                tools:ignore="ContentDescription" />
        </LinearLayout>

        <TextView
            android:textStyle="bold"
            android:id="@+id/obz_six"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/obzSix"
            android:textSize="20sp" />
        <TextView
            android:id="@+id/obz_seven"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="@string/obzSeven"
            android:textSize="20sp" />

        <TextView
            android:textStyle="bold"
            android:id="@+id/obz_eight"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/faq"
            android:textSize="20sp" />

        <TextView
            android:onClick="ClickMedia"
            android:id="@+id/obz_twelve"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/faqNotify"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/obz_nine"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/faqConfirmations"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/obz_ten"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/faqBackups"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/obz_eleven"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/faqError"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_margin="20dp"
            android:gravity="end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/button_error_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/errors"
                android:textColor="@color/custom_button_add"
                android:textSize="19sp" />

            <TextView
                android:onClick="ClickMedia"
                android:layout_marginStart="20dp"
                android:id="@+id/button_donate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:text="@string/donate"
                android:textColor="@color/custom_button_add"
                android:textSize="19sp" />
        </LinearLayout>
</LinearLayout>
</ScrollView>