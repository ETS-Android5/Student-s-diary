<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <LinearLayout
        android:id="@+id/LinerMicro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ConfirmationMicrophone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_microphone" />

        <org.apmem.tools.layouts.FlowLayout
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TextMicro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00AF7F7F"
                android:gravity="center"
                android:text="@string/ConfirmationMicrophone"
                android:textSize="19dp" />

            <TextView
                android:id="@+id/TimeMicro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00AF7F7F"
                android:gravity="center"
                android:textSize="19dp" />
        </org.apmem.tools.layouts.FlowLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:padding="20dp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/ConfirmationCamera"
            android:background="@drawable/shape"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:scaleType="centerCrop"
            android:padding="20dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="#00AF7F7F"
            android:text="@string/ConfirmationCamera"
            android:textSize="19dp"
            />
    </LinearLayout>

</LinearLayout>