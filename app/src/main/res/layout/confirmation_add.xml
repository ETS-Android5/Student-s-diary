<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/grid_conf_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:alignmentMode="alignBounds"
    android:columnCount="2"
    android:rowOrderPreserved="false">

    <LinearLayout
        android:id="@+id/LinerMicro"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_columnWeight="1"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ConfirmationMicrophone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:background="@drawable/shape"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_microphone"
            tools:ignore="ContentDescription" />

            <TextView
                android:layout_marginTop="20dp"
                android:id="@+id/TextMicro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00AF7F7F"
                android:gravity="center"
                android:text="@string/ConfirmationMicrophone"
                android:textSize="19sp" />

            <TextView
                android:id="@+id/TimeMicro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#00AF7F7F"
                android:gravity="center"
                android:textSize="19sp"
                android:visibility="gone"/>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/photo_linear"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_columnWeight="1"
        android:padding="20dp">

        <ImageButton
            android:id="@+id/ConfirmationCamera"
            android:background="@drawable/shape"
            android:layout_width="wrap_content"
            android:adjustViewBounds="true"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_camera"
            android:scaleType="centerCrop"
            android:padding="20dp"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/text_camera_conf"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:background="#00AF7F7F"
            android:text="@string/ConfirmationCamera"
            android:textSize="19sp"
            />
    </LinearLayout>

</GridLayout>